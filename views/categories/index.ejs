<div class="modal fade" id="addCategoryModal" tabindex="-1" aria-labelledby="addCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addCategoryModalLabel">Kategoriya qo'shish</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="addCategoryForm" action="/categories/add" method="post">
                    <div class="form-group">
                        <label for="category_name" class="col-form-label">Kategoriya nomi:</label>
                        <input type="text" class="form-control" id="category_name" name="category_name" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Bekor qilish</button>
                <button type="submit" form="addCategoryForm" class="btn btn-success">Qo'shish</button>
            </div>
        </div>
    </div>
</div>

<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Kategoriyalar</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <button type="button" class="btn btn-sm btn-outline-success" data-toggle="modal"
                    data-target="#addCategoryModal">
                <i data-feather="plus"></i>
                Qo'shish
            </button>
        </div>
    </div>
    <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-sm alert-danger" role="alert">
            <%= error %>
        </div>
    <% } %>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th class="pl-2">Kategoriya nomi</th>
                <th>Faktlar soni</th>
                <th class="pr-2">&nbsp;</th>
            </tr>
            </thead>
            <tbody>
            <% if (categories.length > 0) { %>
                <% for (let category of categories) { %>
                    <tr>
                        <td class="align-middle pl-2"><%= category.name %></td>
                        <td class="align-middle"><%= category.facts.length %></td>
                        <td class="align-middle pr-2">
                            <form action="/categories/delete/<%= category.id %>" method="post">
                                <button type="submit" class="btn btn-sm btn-danger">O'chirish</button>
                            </form>
                        </td>
                    </tr>
                <% } %>
            <% } else { %>
                <tr>
                    <td colspan="3" class="text-center">Kategoriyalar yo'q</td>
                </tr>
            <% } %>
            </tbody>
        </table>
    </div>
</main>
