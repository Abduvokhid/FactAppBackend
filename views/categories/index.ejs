<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Kategoriyalar</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <a href="/admin/categories/add" class="btn btn-sm btn-outline-success">
                <i data-feather="plus"></i>
                Qo'shish
            </a>
        </div>
    </div>
    <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-sm alert-danger" role="alert">
            <%= error %>
        </div>
    <% } %>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th class="pl-2">Kategoriya nomi</th>
                <th class="pr-2">&nbsp;</th>
            </tr>
            </thead>
            <tbody>
            <% if (categories.length > 0) { %>
                <% for (let category of categories) { %>
                    <tr>
                        <td class="align-middle pl-2"><%= category.name %></td>
                        <td class="align-middle pr-2 d-flex flex-row justify-content-end">
                            <a href="/admin/categories/edit/<%= category.id %>" class="btn btn-sm btn-warning mr-2">O'zgartirish</a>
                            <form action="/admin/categories/delete/<%= category.id %>" method="post">
                                <button type="submit" class="btn btn-sm btn-danger">O'chirish</button>
                            </form>
                        </td>
                    </tr>
                <% } %>
            <% } else { %>
                <tr>
                    <td colspan="3" class="text-center">Kategoriyalar yo'q</td>
                </tr>
            <% } %>
            </tbody>
        </table>
    </div>
</main>
