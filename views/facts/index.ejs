<div class="modal fade" id="addFactModal" tabindex="-1" aria-labelledby="addFactModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addFactModalLabel">Fakt qo'shish</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <% if (categories.length > 0) { %>
                <div class="modal-body">
                    <form id="addCategoryForm" action="/facts/add" method="post">
                        <div class="form-group">
                            <label for="fact_title" class="col-form-label">Sarlavha:</label>
                            <input type="text" class="form-control" id="fact_title" name="fact_title" required>
                        </div>
                        <div class="form-group">
                            <label for="fact_description" class="col-form-label">Asosiy matn:</label>
                            <textarea class="form-control" id="fact_description" name="fact_description" required></textarea>
                        </div>
                        <div class="form-group">
                            <label for="fact_category" class="col-form-label">Kategoriyalar:</label>
                            <select multiple name="fact_category" id="fact_category" class="form-control" required>
                                <% for (let category of categories) { %>
                                    <option value="<%= category.id %>"><%= category.name %></option>
                                <% } %>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Bekor qilish</button>
                    <button type="submit" form="addCategoryForm" class="btn btn-success">Qo'shish</button>
                </div>
            <% } else { %>
                <p class="mx-3 my-2">Fakt qo'shish uchun avval kategoriya qo'shing!</p>
            <% } %>
        </div>
    </div>
</div>

<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Faktlar</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <button type="button" class="btn btn-sm btn-outline-success" data-toggle="modal"
                    data-target="#addFactModal">
                <i data-feather="plus"></i>
                Qo'shish
            </button>
        </div>
    </div>
    <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-sm alert-danger" role="alert">
            <%= error %>
        </div>
    <% } %>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th class="pl-2">Sarlavha</th>
                <th>Kategoriyalar</th>
                <th class="pr-2">&nbsp;</th>
            </tr>
            </thead>
            <tbody>
            <% if (facts.length > 0) { %>
                <% for (let fact of facts) { %>
                    <tr>
                        <td class="align-middle pl-2"><%= fact.title.replace(/(^\s*(?!.+)\n+)|(\n+\s+(?!.+)$)/g, ' ').slice(0, 120).trim() %></td>
                        <td class="align-middle">
                            <% for (let category of fact.categories) { %>
                                <span class="badge bg-dark text-light px-2 py-1"><%= category.name %></span>
                            <% } %>
                        </td>
                        <td class="align-middle pr-2">
                            <form action="/facts/delete/<%= fact.id %>" method="post">
                                <button type="submit" class="btn btn-sm btn-danger">O'chirish</button>
                            </form>
                        </td>
                    </tr>
                <% } %>
            <% } else { %>
                <tr>
                    <td colspan="4" class="text-center">Faktlar yo'q</td>
                </tr>
            <% } %>
            </tbody>
        </table>
    </div>
</main>
